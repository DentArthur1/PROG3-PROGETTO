<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.client.InboxController">
    <!-- Top Bar -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
            <Text text="Ciao, Utente" style="-fx-font-size: 18px;"/>
            <!-- Connection Status Label -->
            <Label fx:id="connectionStatus" text="Connessione: Attiva" style="-fx-font-size: 14px; -fx-text-fill: green;" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <!-- Left Side - Buttons -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button onAction="#handleCompose" text="Scrivi" />
            <Button onAction="#handleDelete" text="Elimina" />
        </VBox>
    </left>

    <!-- Center - Mail List and Message Viewer -->
    <center>
        <ScrollPane fitToWidth="true" prefHeight="400" prefWidth="600">
            <VBox fx:id="emailListContainer" spacing="10" style="-fx-padding: 10 20 10 10;" prefWidth="580">
                <!-- Gli elementi email verranno aggiunti dinamicamente qui -->
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
