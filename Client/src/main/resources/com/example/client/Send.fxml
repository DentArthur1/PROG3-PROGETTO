<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.client.sendController" alignment="TOP_LEFT" style="-fx-padding: 20;">

    <!-- Contenitore per il pulsante "Go Back" in alto a destra -->
    <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 10;">
        <Button text="Go Back" onAction="#goBack" />
    </HBox>

    <!-- Campo per destinatari -->
    <Label text="Destinatari:" />
    <TextField fx:id="toField" promptText="Inserisci gli indirizzi email separati da virgola" />

    <!-- Campo per oggetto -->
    <Label text="Oggetto:" />
    <TextField fx:id="subjectField" promptText="Inserisci l'oggetto del messaggio" />

    <!-- Campo per corpo del messaggio -->
    <Label text="Messaggio:" />
    <TextArea fx:id="bodyArea" promptText="Scrivi qui il corpo del messaggio" wrapText="true" />

    <!-- Pulsante per inviare l'email -->
    <Button text="Invia" onAction="#sendEmail" />

    <!-- Etichetta per mostrare errori o conferme -->
    <Label fx:id="statusLabel" textFill="red" />
</VBox>
