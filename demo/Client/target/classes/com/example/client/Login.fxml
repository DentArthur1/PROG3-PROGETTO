<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.example.client.LoginController">

    <!-- Layout principale della pagina -->
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <!-- Titolo -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Inserisci la tua mail" />

            <!-- Campo per inserire l'email -->
            <TextField fx:id="emailField" maxWidth="300" prefHeight="32.0" prefWidth="184.0" promptText="Scrivi" style="-fx-font-size: 16px;" />

            <!-- Messaggio di errore sotto il campo email -->
            <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 14px;" />
        </VBox>
    </center>

    <!-- Tasto Send in basso a destra -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="143.0" prefWidth="409.0" spacing="10.0">
            <Button style="-fx-font-size: 16px;" text="Login" onAction="#handleLogin" textAlignment="CENTER" />
            <HBox.margin>
                <Insets bottom="20" right="20" />
            </HBox.margin>
        </HBox>
    </bottom>

</BorderPane>
