<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.example.client.EmailController" style="-fx-background-color: #f4f6f9;">

    <!-- Layout principale -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: white; -fx-border-color: #d1d5db; -fx-border-radius: 10; -fx-background-radius: 10;">

            <!-- Titolo della Mail -->
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #34495e; -fx-underline: true;" text="Email Details" />

            <!-- Dettagli della mail -->
            <VBox spacing="12" style="-fx-padding: 10;">
                <HBox spacing="15">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="From:" />
                    <Label fx:id="senderLabel" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;" text="Sender Email" />
                </HBox>

                <HBox spacing="15">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="To:" />
                    <Label fx:id="receiverLabel" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;" text="Receiver Email" />
                </HBox>

                <HBox spacing="15">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Subject:" />
                    <Label fx:id="subjectLabel" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;" text="Email Subject" />
                </HBox>

                <HBox spacing="15">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Date:" />
                    <Label fx:id="dateLabel" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;" text="Sent Date" />
                </HBox>
            </VBox>

            <!-- Corpo del messaggio con ScrollPane -->
            <ScrollPane fitToWidth="true" style="-fx-padding: 10; -fx-background-color: transparent;">
                <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: #ecf0f1; -fx-border-color: #d1d5db; -fx-border-radius: 8; -fx-background-radius: 8;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Body:" />
                    <Label fx:id="bodyLabel" wrapText="true" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" text="Content" />
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Pulsanti in basso a destra -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="20" style="-fx-padding: 15; -fx-background-color: #f4f6f9;">
            <Button text="Reply" onAction="#handleReply" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 15; -fx-background-radius: 5;" />
            <Button text="Reply All" onAction="#handleReplyAll" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 15; -fx-background-radius: 5;" />
            <Button text="Back to Inbox" onAction="#handleBackToInbox" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 15; -fx-background-radius: 5;" />
        </HBox>
    </bottom>

</BorderPane>
